# .npmrc (권장 설정)
# Phantom dependencies 방지 (엄격 모드)
node-linker=isolated

# hoisting 패턴 설정 (필요한 패키지만 예외 처리)
public-hoist-pattern[]=*types*
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=@playwright/test
public-hoist-pattern[]=playwright*
public-hoist-pattern[]=msw

# Next.js 관련
public-hoist-pattern[]=next
public-hoist-pattern[]=@next/*

# Babel 관련 (Next.js 내부에서 사용)
public-hoist-pattern[]=@babel/*

# styled-components 관련
public-hoist-pattern[]=styled-components
public-hoist-pattern[]=@babel/plugin-styled-components

# Ant Design 관련
public-hoist-pattern[]=antd
public-hoist-pattern[]=@ant-design/*

# 자동 설치 peer dependencies
auto-install-peers=true
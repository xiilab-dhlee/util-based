{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!node_modules",
      "!.next",
      "!dist",
      "!build",
      "!.vscode/settings.json",
      "!scripts/*"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noConsole": {
          "options": {
            "allow": ["assert", "error", "info", "warn", "table"]
          }
        }
      },
      "style": {
        "noDefaultExport": "error",
        "useImportType": "error"
      },
      "a11y": {
        "useKeyWithMouseEvents": "off"
      }
    },

    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },

  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "identifierOrder": "natural",
            "groups": [
              ":NODE:",
              ":PACKAGE:",
              ":PACKAGE_WITH_PROTOCOL:",
              ":BLANK_LINE:",
              ["@/**"],
              ":ALIAS:",
              ":PATH:"
            ]
          }
        }
      }
    }
  },

  "overrides": [
    {
      "includes": ["src/app/**", "next.config.ts", "playwright.config.ts"],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    }
  ]
}
